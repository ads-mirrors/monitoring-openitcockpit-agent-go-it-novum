    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {
                "OITC_AGENT_DEBUG": "1",
            },
            "args": ["-c", "./config.ini", "--disable-logfile", "--debug"]
            //"args": ["-c", ".\\config.ini", "--disable-logfile", "--debug"] // Windows
            //"args": ["-c", "./config.ini", "--log", "/tmp/agent-debug.log", "--debug"] // With logfile
        }
    ]
}